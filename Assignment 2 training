def factorial (num): 
    i = num
    factorial = 1 
    if num>= 0: 
        while i>= 1: 
            factorial = factorial * i 
            i = i-1
        print(factorial)
        
        
#%% 

list [4,6,7] non doit laisser entrer parametre 
maximum_number = None 

def maximum (list) : 
    for max in list : 
        if maximum_number is None or maximum_number > list:
            maximum_number = max 
        print (maximum_number)    
        
#%%

list = []   
def maximum (list):
    maxnumber=list[0]
    for i in range(0,len(list),1):
        if maxnumber < list[i]:
            maxnumber = list[i]
    print("the max is", maxnumber)
        
